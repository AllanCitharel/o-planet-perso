{% extends 'base.html.twig' %}

{% block title %}Emergency{% endblock %}

{% block body %}
    <h1>Niveau d'urgence</h1>
    <button type="button" class="btn btn-outline-primary"><a href="{{ path('admin_emergency_browse') }}">Retour à la liste</a></button>

     {% if is_granted('ROLE_ADMIN') %}
        <button type="button" class="btn btn-outline-primary"><a href="{{ path('admin_emergency_edit', {'id': emergency.id}) }}">Modifier</a></button>
    {% endif %} 

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emergency.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ emergency.name }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ emergency.createdAt ? emergency.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ emergency.updatedAt ? emergency.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

     {% if is_granted('ROLE_ADMIN') %}
        {{ include('admin/emergency/_delete_form.html.twig') }}
    {% endif %} 

   
{% endblock %}

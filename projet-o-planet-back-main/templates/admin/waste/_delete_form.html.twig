<form method="post" action="{{ path('admin_waste_delete', {'id': waste.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ waste.id) }}">
    <button class="btn btn-outline-danger mt-1">Supprimer</button>
    <input type="hidden" name="_method" value="delete">
</form>
